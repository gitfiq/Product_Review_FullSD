@inject NavigationManager Navigation

<div class="top-row navbar">
    <div class="container-fluid">
        <div class="d-flex flex-row">
            <a class="navbar-brand" href="">Project</a>
            <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
                <ul class="navbar-nav mb-0 close">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                            <span class="oi oi-home" aria-hidden="true"></span> Home
                        </NavLink>
                    </li>

                    <!--Drop down menu-->
                    <li class="nav-item dropdown px-3">
                        <NavLink class="nav-link dropdown-toggle" role="button">
                            Dropdown
                        </NavLink>
                        <ul class="dropdown-menu">
                            <li>
                                <NavLink class="dropdown-item" href="#">Math</NavLink>
                            </li>
                            <li>
                                <NavLink class="dropdown-item" href="#">Science</NavLink>
                            </li>
                            <li>
                                <NavLink class="dropdown-item" href="#">English</NavLink>
                            </li>
                            <li>
                                <NavLink class="dropdown-item" href="authors">Authors</NavLink>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="authors">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Authors
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="appUsers">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> App Users
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="books">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Books
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="reviews">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Reviews
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="bookAuthorDetails">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Book Author Details
                        </NavLink>
                    </li>
                </ul>
            </div>


        </div>
        <div class="d-flex flex-row-reverse">
            <LoginDisplay />
        </div>
    </div>
</div>



@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    private void BeginLogOut(MouseEventArgs args)
    {
        Navigation.NavigateToLogout("authentication/logout", "/");
    }
}
