@page "/publishers/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h2 class="card-title">Add Publisher</h2>
<hr />
<br />

<FormComponent ButtonText="Add Publisher" publisher="publisher" OnValidSubmit="@CreatePublisher" />


@code {
    Publisher publisher = new Publisher();

    private async Task CreatePublisher()
    {
        await _client.PostAsJsonAsync(Endpoints.PublishersEndpoint, publisher);
        _navManager.NavigateTo("/publishers/");
    }

}
