@page "/appUsers/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New AppUser</h3>
<hr />
<br />

<EditForm Model="@appUser" OnValidSubmit="CreateAppUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label>First Name: </label>
        <div>
            <InputText @bind-Value="@appUser.FirstName" class="form-control" />
            <ValidationMessage For="@(() => appUser.FirstName)" />
        </div>
        <label>Last Name: </label>
        <div>
            <InputText @bind-Value="@appUser.LastName" class="form-control" />
            <ValidationMessage For="@(() => appUser.LastName)" />
        </div>
        <label>Gender: </label>
        <div>
            <InputText @bind-Value="@appUser.Gender" class="form-control" />
            <ValidationMessage For="@(() => appUser.Gender)" />
        </div>
        <label>Username: </label>
        <div>
            <InputText @bind-Value="@appUser.Username" class="form-control" />
            <ValidationMessage For="@(() => appUser.Username)" />
        </div>
        <label>Password: </label>
        <div>
            <InputText @bind-Value="@appUser.Password" class="form-control" />
            <ValidationMessage For="@(() => appUser.Password)" />
        </div>
        <label>Email Address: </label>
        <div>
            <InputText @bind-Value="@appUser.EmailAddress" class="form-control" />
            <ValidationMessage For="@(() => appUser.EmailAddress)" />
        </div>
    </div>

    <button type="submit" class="btn btn-success btn-block">
        Create App User
    </button>

</EditForm>


@code {
    AppUser appUser = new AppUser();

    private async Task CreateAppUser()
    {
        await _client.PostAsJsonAsync(Endpoints.AppUsersEndpoint, appUser);
        _navManager.NavigateTo("/appUsers/");
    }

}