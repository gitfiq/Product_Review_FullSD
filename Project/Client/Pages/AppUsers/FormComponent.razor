<EditForm Model = "@appUser" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class="form-group">
            <div class="form-group">
                <label>First Name: </label>
                <div>
                    <InputText @bind-Value="@appUser.FirstName" class="form-control" />
                    <ValidationMessage For="@(() => appUser.FirstName)" />
                </div>
                <label>Last Name: </label>
                <div>
                    <InputText @bind-Value="@appUser.LastName" class="form-control" />
                    <ValidationMessage For="@(() => appUser.LastName)" />
                </div>
                <label>Gender: </label>
                <div>
                    <InputText @bind-Value="@appUser.Gender" class="form-control" />
                    <ValidationMessage For="@(() => appUser.Gender)" />
                </div>
                <label>Username: </label>
                <div>
                    <InputText @bind-Value="@appUser.Username" class="form-control" />
                    <ValidationMessage For="@(() => appUser.Username)" />
                </div>
                <label>Password: </label>
                <div>
                    <InputText @bind-Value="@appUser.Password" class="form-control" />
                    <ValidationMessage For="@(() => appUser.Password)" />
                </div>
                <label>Email Address: </label>
                <div>
                    <InputText @bind-Value="@appUser.EmailAddress" class="form-control" />
                    <ValidationMessage For="@(() => appUser.EmailAddress)" />
                </div>
            </div>
        </div>
    </fieldset>
    @if(!Disabled){
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <br />
    <BackToList Target="appUsers" />
</EditForm>


@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public AppUser? appUser { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
